@{
    ViewData["Title"] = "Members";
}
@section Styles{
    <!-- DataTables -->
    <link rel="stylesheet" href="~/theme/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/theme/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="~/theme/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">

    <!-- jQuery Confirm -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.css">
}
<!-- Toastr -->
<link href="~/theme/plugins/toastr/toastr.min.css" rel="stylesheet" type="text/css" />

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Users</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item"><a href="#">Users</a></li>
                    <li class="breadcrumb-item active">Index</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card card-secondary">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <h3 class="card-title"><i class="fa fa-list"></i> &nbsp;&nbsp;@SharedLocalizer["MemberList"]</h3>
                            </div>
                            <div class="col-md-6">
                                <a asp-action="Add" style="float:right;" class="btn btn-sm btn-primary"><i class="fa fa-plus"></i> &nbsp;&nbsp;Add</a>
                            </div>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="member-list" class="table table-bordered table-hover">
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>

@section Scripts{
    <!-- DataTables  & Plugins -->
    <script src="~/theme/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/theme/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/theme/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/theme/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="~/theme/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="~/theme/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
    <script src="~/theme/plugins/jszip/jszip.min.js"></script>
    <script src="~/theme/plugins/pdfmake/pdfmake.min.js"></script>
    <script src="~/theme/plugins/pdfmake/vfs_fonts.js"></script>
    <script src="~/theme/plugins/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="~/theme/plugins/datatables-buttons/js/buttons.print.min.js"></script>
    <script src="~/theme/plugins/datatables-buttons/js/buttons.colVis.min.js"></script>
    <!-- jQuery Confirm -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.js"></script>

    <!-- Toastr -->
    <script src="~/theme/plugins/toastr/toastr.min.js"></script>
    <script>
        $(document).ready(function () {
            var url = "@Url.Action("GetMembersJson", "Member")";
            var table = $("#member-list").DataTable({
                buttons: [
                    'copy', 'excel', 'pdf'
                ],
                dom: 'Bfrtip',
                pageLength: 15,
                responsive: true,
                autoWidth: false,
                order: [[0, "desc"]],
                //"processing": true,
                //"serverSide": true,
                //"filter": true,
                //"orderMulti": false,

                ajax: {
                    url: url,
                    dataSrc: ""
                },
                columns: [
                    { data: "id", title: "Id" },
                    { data: "startdate", title: "StartDate" },
                    { data: "status", title: "Status", },
                    { data: "price", title: "Price" },
                    { data: "membership", title: "Membership" }
                ],
            });

            $(document).on("click", ".js-delete", function () {

                debugger;
                var dataId = $(this).attr("data-id");

                $.confirm({
                    title: '<i class="fa fa-warning"></i> Please Confirm',
                    content: 'Are you sure you want to delete user with id:' + dataId,
                    autoClose: 'cancel|10000',
                    type: 'red',
                    closeIcon: true,
                    closeIconClass: 'fa fa-close',
                    buttons: {
                        cancel: {
                            text: 'Cancel',
                            keys: ['esc'],
                            action: function () {
                            }
                        },
                        confirm: {
                            text: 'Delete',
                            btnClass: 'btn-danger',
                            keys: ['enter'],
                            action: function () {
                                var url = '@Url.Action("Delete")';
                                $.ajax({
                                    type: "DELETE",
                                    async: false,
                                    url: url,
                                    dataType: "json",
                                    data: {
                                        id: dataId,
                                    },
                                    success: function (data) {
                                        debugger;
                                        table.ajax.reload();
                                        toastr.success('Deleted Successfully');
                                    },
                                    error: function (xhr, textStatus, errorThrown) {
                                        debugger;
                                        toastr.error('Something went wrong!');
                                    }
                                });
                            }
                        },

                    }
                });
            });
        });
    </script>
}